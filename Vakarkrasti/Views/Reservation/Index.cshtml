@model Vakarkrasti.Models.Reservations
@{
    ViewData["Title"] = "Rezervācija";
}

<div class="container">
    <div class="row">
        <h3 class="text-center">Rezervācijas forma</h3>
    </div>
    <div asp-validation-summary="ModelOnly" class="text-danger"></div>
    <form asp-action="CreateReservation">
        <div class="row">
            <div class="col-md-1">

            </div>

            <div class="col-md-4">
                <div class="form-group">
                    <label asp-for="@Model.Name" class="control-label"></label>
                    <input type="text" asp-for="@Model.Name" class="form-control" />
                    <span asp-validation-for="@Model.Name" class="text-danger"></span>
                </div>
                <div class="form-group">
                    <label asp-for="@Model.ArrivalDateTime" class="control-label"></label>
                    <input type="date" asp-for="@Model.ArrivalDateTime" class="form-control" />
                    <span asp-validation-for="@Model.ArrivalDateTime" class="text-danger"></span>
                </div>

                <div class="form-group">
                    <label asp-for="@Model.GuestHouse" class="control-label"></label>
                    <br />
                    @Html.DropDownListFor(m => m.GuestHouse, new SelectList(ViewBag.GuestHouses, "Value", "Text"), new { @class = "form-control" })
                    <span asp-validation-for="@Model.GuestHouse" class="text-danger"></span>
                </div>

            </div>
            <div class="col-md-2">

            </div>

            <div class="col-md-4">
                <div class="form-group">
                    <label asp-for="@Model.Email" class="control-label"></label>
                    <input type="email" asp-for="@Model.Email" class="form-control" />
                    <span asp-validation-for="@Model.Email" class="text-danger"></span>
                </div>
                <div class="form-group">
                    <label asp-for="@Model.DepartureDateTime" class="control-label"></label>
                    <input type="date" asp-for="@Model.DepartureDateTime" class="form-control" />
                    <span asp-validation-for="@Model.DepartureDateTime" class="text-danger"></span>
                </div>
                <div class="form-group">
                    <label asp-for="@Model.NumberOfGuests" class="control-label"></label>
                    <input type="text" asp-for="@Model.NumberOfGuests" class="form-control" />
                    <span asp-validation-for="@Model.NumberOfGuests" class="text-danger"></span>
                </div>
            </div>

            <div class="col-md-1">

            </div>

        </div>
        <br />
        <div class="row">
            <div class="col-1"></div>
            <div class="col-md-10">
                <div class="form-group">
                    <label asp-for="@Model.Comment" class="control-label"></label>
                    <textarea rows="5" type="text" asp-for="@Model.Comment" class="form-control"></textarea>
                    <span asp-validation-for="@Model.Comment" class="text-danger"></span>
                </div>
                <br />
                <div class="form-group">
                    <input type="submit" value="Nosūtīt" class="btn btn-primary btn-lg btn" />
                </div>
            </div>
            <div class="col-1"></div>
        </div>
    </form>

</div>

